<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vongship_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="LoshipLTDD"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.cart"></activity>
        <activity android:name=".Activity.IdCardActivity" />
        <activity android:name=".Activity.ChangePasswordActivity" />
        <activity android:name=".Activity.ChangePhoneActivity" />
        <activity android:name=".Activity.ChangeProfileActivity" />
        <activity android:name=".Activity.PersonalFileActivity" />
        <activity android:name=".Activity.ContactLoshipActivity" />

        <service android:name=".service.MyFirebaseService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Activity.FoodDeliveryActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Activity.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".Activity.NotificationsDetailActivity" />
        <activity android:name=".Activity.DetailProfileStore" />
        <activity android:name=".Activity.DetailProfileFeature" />
        <activity android:name=".Activity.ForgotPasswordsActivity" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.CategoryDetailsActivity" />
        <activity android:name=".Activity.StoreDetailsActivity" />
        <activity android:name=".Activity.ProductDetailsActivity" />
        <activity android:name=".Activity.RecommendAppActivity" />
        <activity android:name=".Activity.FavoriteShopActivity" />
        <activity android:name=".Activity.QuestionActivity" />
        <activity android:name=".Activity.PointShopActivity" />
        <activity android:name=".Activity.CardManageActivity" />
        <activity android:name=".Activity.LoshipCommunityActivity" />
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>