<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.ForgotPasswordsActivity">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/loshipbranch" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:fontFamily="serif"
        android:text="Đặt liền tay - giao hàng ngay"
        android:textColor="#05749F"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgotpassTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/montserrat"
        android:text="Đặt lại mật khẩu"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/forgotpassTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_qmk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#8D8E8F"
            android:textStyle="italic" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_qmk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/inputlayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/button_red"
        android:text="Đặt lại mật khẩu"
        android:textAllCaps="true"
        android:textColor="#ffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_qmk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=" Đăng nhập"
        android:textColor="#00BCD4"
        android:textSize="20sp" />

</RelativeLayout>