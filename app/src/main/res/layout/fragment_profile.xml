<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context=".Fragment.ProfileFragment">
    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="127dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            app:civ_border_color="#EDEDED"
            app:civ_border_width="2dp" />
        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Thành Luân"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTv"
                android:text="0383.422.211"
                android:textColor="#000000"
                android:textSize="16sp" />
            <Button
                android:id="@+id/bt_update"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:layout_below="@id/phoneTv"
                android:layout_marginTop="-1dp"
                android:background="@drawable/button_red2"
                android:text="Cập nhật hồ sơ"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/recommend"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:background="@drawable/ic_gift"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <RelativeLayout
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recommendTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu Loship cho bạn bè"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rcmDcrpTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recommendTv"
                android:text="Nhận ngay phần thưởng hấp dẫn"
                android:textColor="#000000"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_comment"
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_emotion"
            android:drawableRight="@drawable/ic_forward"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Cộng đồng Loship"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/favor_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_favorite"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Cửa hàng yêu thích"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_edit"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Quản lý hồ sơ"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/card_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_card"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Quản lý thẻ"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_help"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Câu hỏi thường gặp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detailstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_textsms"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Đề xuất cửa hàng mong muốn"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detailfeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_textsms"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Đóng góp tính năng Loship"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableRight="@drawable/ic_forward"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text=" Liên hệ với Loship"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listOption"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listOption"
            android:layout_margin="5dp"
            android:background="@drawable/borderbot"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:text="Phiên bản hiện tại 1.0.0"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>